<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="Snake" Height="500" Width="800"
        MinWidth="300" MinHeight="300"
        Background="{StaticResource BackgroundColor}"
        Foreground="{StaticResource TextColor}"
        FontFamily="{StaticResource MainFont}"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/icon.ico"
        PreviewKeyDown="Window_PreviewKeyDown"
        KeyDown="Window_KeyDown">
    <Viewbox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="ScoreText"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Text="SCORE 0"
               FontSize="22"
               Margin="10"/>
            <Slider x:Name="sizeSlider" 
                Minimum="4" Maximum="100" 
                TickFrequency="1"
                IsSnapToTickEnabled="True"
                IsDirectionReversed="False"
                ValueChanged="Slider_ValueChanged"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="150" Margin="20,26,0,0" />
            <Button x:Name="Confirm"
                Content="Confirm"
                HorizontalAlignment="Left"
                FontSize="10"
                VerticalAlignment="Top"
                Margin="119,12,0,0"
                Click="Button_Click" Height="14" />
            <TextBlock x:Name="valueDisplay"
                   Text="Size: 0"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Margin="20,12,0,0" />

            <Border x:Name="GridBorder"
            Grid.Row="1"
            BorderBrush="{StaticResource GridLineColor}"
            BorderThickness="1.5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            RenderOptions.EdgeMode="Aliased"
            Margin="20,0,20,20">
                <UniformGrid x:Name="GameGrid"
                     Width="400"
                     Height="400"
                     Background="{StaticResource GridBackgroundColor}"
                     SnapsToDevicePixels="True"
                     RenderOptions.BitmapScalingMode="HighQuality">
                </UniformGrid>
            </Border>

            <Border x:Name="Overlay"
        Grid.Row="1"
        Background="{StaticResource OverlayColor}"
        Width="{Binding Path=ActualWidth, ElementName=GridBorder}"
        Height="{Binding Path=ActualHeight, ElementName=GridBorder}"
        Margin="{Binding Path=Margin, ElementName=GridBorder}"
        RenderOptions.EdgeMode="Aliased">
                <StackPanel x:Name="stackPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="OverlayText"
               Text="PRESS ANY KEY TO START"
               FontSize="26"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               TextWrapping="Wrap"
               Margin="0,0,0,0"/>
                    <Button x:Name="BackButton"
                HorizontalAlignment="Left"
                Content="Back"
                Width="57"
                Height="22"
                Visibility="Collapsed"
                Click="BackButton_Click" Margin="0,0,0,200"/>
                    <TextBlock x:Name="MovementText"
                        Text="Movement Type: " 
                        Height="18" 
                        Width="101" 
                        Margin="0,-100,0,70" 
                        HorizontalAlignment="Left"
                        Visibility="Collapsed"/>
                    <Button x:Name="ResumeButton"
            Content="Resume"
            Width="100"
            Height="30"
            Visibility="Collapsed"
            Margin="0,0,0,10"
            Click="ResumeButton_Click"/>
                    <Button x:Name="MovementType"
            Content="WASD"
            Width="100"
            Height="30"
            Visibility="Collapsed"
            Click="MovementType_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-100,0,100"/>
                    <Button x:Name="OptionsButton"
            Content="Options"
            Width="100"
            Height="30"
            Visibility="Collapsed"
            Margin="0,0,0,10"
            Click="Options_Click"/>
                    <Button x:Name="RestartButton"
            Content="Restart"
            Width="100"
            Height="30"
            Visibility="Collapsed"
            Click="RestartButton_Click"/>
                </StackPanel>
            </Border>
            <Slider x:Name="speedSlider" 
                Value="1"
                Minimum="0.5" Maximum="8" 
                TickFrequency="0.5"
                IsSnapToTickEnabled="True"
                IsDirectionReversed="False"
                Ticks="0.5,1,2,4,8"
                ValueChanged="speedSlider_ValueChanged"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="150" Margin="276,26,0,0" />
            <Button x:Name="speedConfirm"
                Content="Confirm"
                HorizontalAlignment="Left"
                FontSize="10"
                VerticalAlignment="Top"
                Margin="374,12,0,0"
                Click="speedConfirm_Click" Height="14" />
            <TextBlock x:Name="speedDisplay"
                Text="Speed: 0"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Margin="276,12,0,0" />
        </Grid>
    </Viewbox>
</Window>
